
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="login">
    <h2 class="mb-4" style="font-weight: bold" >Login</h2>
    <form asp-action="Login" method="post" class="form">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-dark" style="min-width: 100px">Log in</button>
        <button class="btn btn-danger" style="margin-left: 2px; min-width: 100px" asp-action="ListOfAthletes" asp-controller="OlympicGames">Cancel</button>
        <div class="guest-info">
            <p><strong>You can use:</strong></p>
            <p>Email: <span class="text-primary">guest@wsei.edu.pl</span></p>
            <p>Password: <span class="text-primary">Guest123!</span></p>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>

<style>
    .login {
        border: 1px solid black;
        font-weight: bold;
        width: 400px;
        height: 500px;
        color: black;
        padding-top: 20px;
        border-radius: 20px;
        box-shadow: 0px 0px 10px black;
        background-size: cover;
        background-position: center;
        overflow: hidden;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    .centered-span {
        position: absolute; /* Pozycjonowanie względem formularza */
        bottom: 10px; /* Ustawienie przy dolnej krawędzi */
        left: 50%; /* Środek w osi poziomej */
        transform: translateX(-50%); /* Wyśrodkowanie tekstu */
        text-align: center; /* Wyrównanie tekstu */
        font-size: 16px; /* Opcjonalnie, mniejsza czcionka */
    }
    .guest-info {
        position: absolute; /* Pozycjonowanie w ramach formularza */
        bottom: 0px; /* Odstęp od dołu formularza */
        left: 50%; /* Wyśrodkowanie w poziomie */
        transform: translateX(-50%); /* Korekta na szerokość elementu */
        text-align: center; /* Wyrównanie tekstu w środku */
        font-size: 0.9rem; /* Opcjonalnie mniejsza czcionka */
        color: black; /* Subtelny kolor tekstu */
    }
    .guest-info .text-primary {
        font-weight: bold;
    }

    .form-control {
        margin-left: 10px; 
        margin-right: 10px; 
        width: calc(100% - 20px); 
        height: 40px;
        border-radius: 20px;
        border: 1px solid #ccc; 
        color: black;
        box-sizing: border-box; 
    }

    h2 {
        font-weight: normal;
        font-size: 24px;
        margin-bottom: 40px;
        text-align: center;
    }

    label {
        color: black;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 2px;
        padding-left: 10px;
    }

    input {
        height: 40px;
        line-height: 20px;
        border-radius: 20px;
        border: none;
        color: black;
    }

    .btn {
        margin-left: 10px;
    }
    </style>