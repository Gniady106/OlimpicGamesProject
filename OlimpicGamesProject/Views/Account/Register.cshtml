    

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="register">
    <h2 class="mb-4" style="font-weight: bold" >Register</h2>
    <form asp-action="Register" method="post" class="form">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Confirm password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-dark">Register</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>

<style>
    .register {
        border: 1px solid black;
        font-weight: bold;
        width: 400px;
        height: 500px;
        color: black;
        padding-top: 20px;
        border-radius: 20px;
        box-shadow: 0px 0px 20px black;
        background-size: cover;
        background-position: center;
        overflow: hidden;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .form-control {
        margin-left: 10px; /* Odsunięcie od lewej */
        margin-right: 10px; /* Odsunięcie od prawej */
        width: calc(100% - 20px); /* Szerokość pola minus marginesy */
        height: 40px;
         /* Padding w środku */
        border-radius: 20px;
        border: 1px solid #ccc; /* Dodanie obramowania */
        color: black;
        box-sizing: border-box; /* Upewnij się, że padding jest uwzględniany w szerokości */
    }

    h2 {
        font-weight: normal;
        font-size: 24px;
        margin-bottom: 40px;
        text-align: center;
    }

    label {
        color: black;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 2px;
        padding-left: 10px;
    }

    input {
        height: 40px;
        line-height: 20px;
        border-radius: 20px;
        border: none;
